<div class="container">
  <div class="row">

    <!--部分テンプレートの呼び出し-->
    <%= render 'books/side' %>

    <!--右側book-detailここから-->
    <div class="col-lg-8 bg-info">
      <h3>Book detail</h3>
      <table>
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
            <div><%= @book.user.name %></div>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-sm-success" %></td>
          <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:"btn btn-sm-danger", "data-confirm" => "Are you sure to delete this book?" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>