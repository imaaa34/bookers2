<div class="container">
  <div class="row">

    <!--部分テンプレートの呼び出し-->
    <%= render 'books/side', user: @user, book: @book %>

    <!--右側book-detailここから-->
    <div class="col-lg-8 bg-info">
      <h3>Book detail</h3>
      <table>
        <tr>
          <td>
            <%= link_to user_path(@bookd.user_id) do %><%= attachment_image_tag @bookd.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
            <div><%= @bookd.user.name %></div>
            <% end %>
          </td>
          <td><%= link_to @bookd.title, book_path(@bookd.id) %></td>
          <td><%= @bookd.body %></td>
          <% if @userd.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@bookd.id), class:"btn btn-sm-success" %></td>
          <td><%= link_to 'Destroy', book_path(@bookd.id), method: :delete, class:"btn btn-sm-danger", "data-confirm" => "Are you sure to delete this book?" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>