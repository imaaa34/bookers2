<div class="container">
  <div class="row">

    <div class="col-md-3">
    <!--部分テンプレートの呼び出し-->
    <%= render 'books/side', user: @user, book: @book %>
    </div>

    <!--右側book-detailここから-->
    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@bookd.user_id) do %><%= attachment_image_tag @bookd.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><br>
            <label><%= @bookd.user.name %></label>
            <% end %>
          </td>
          <td><%= link_to @bookd.title, book_path(@bookd.id) %></td>
          <td><%= @bookd.body %></td>
          <% if @bookd.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@bookd.id), class:"btn btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@bookd.id), method: :delete, class:"btn btn-danger", "data-confirm" => "Are you sure to delete this book?" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>