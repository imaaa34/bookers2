<div class="container">
  <div class="row">

    <!--部分テンプレートの呼び出し-->
    <%= render 'books/side', books: @books, user: @user %>

    <!--右側booksここから-->
    <div class="col-lg-8 bg-info">
      <h3>Books</h3>
      <table>
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user.profile_image, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>