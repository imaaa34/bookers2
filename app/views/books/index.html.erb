<div class="container">
  <div class="row">

    <div class="col-lg-4 bg-success">
    <!--左側user-infoここから-->
    <h3>User info</h3>
    <%= form_with model:@user, local:true do |f| %>
    <table>
      <tr>
        <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
        <th></th>
      </tr>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
    <%= f.submit "Edit" %>
    <% end %>

    <!--左側new-bookここから-->
    <h3>New book</h3>
    <%= form_with model:@book, local:true do |f| %>
      <label>Title</label>
      <%= f.text_field :title %>
      <label>Opinion</label>
      <%= f.text_area :body %>
      <%= f.submit 'Create book' %>
    <% end %>
    </div>

    <!--右側booksここから-->
    <div class="col-lg-8 bg-info">
      <h3>Books</h3>
      <table>
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user.profile_image, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>