<div class="container">
  <div class="row">
    <div class="col">

      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <label>Title</label>
      <%= f.text_field :name, autofocus: true %>
      <label>Opinion</label>
      <%= f.text_area :body, autofocus: true %>
      <%= f.submit 'Update Book' %>
      <% end %>

      <%= link_to 'show', %> |
      <%= link_to 'Back', %>
    </div>
  </div>
</div>