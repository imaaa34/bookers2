<div class="container">
  <div class="row">

    <!--部分テンプレートの呼び出し-->
    <%= render 'books/side', user: @user, book: @book %>

    <!--右側usersここから-->
    <div class="col-lg-8 bg-info">
      <h3>Books</h3>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>