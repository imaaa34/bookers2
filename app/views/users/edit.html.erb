<div class="container">
  <div class="row">
    <div class="col">
      
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <label>Name</label>
      <%= f.text_field :name, autofocus: true %>
      <label>Image</label>
      <%= f.attachment_field :profile_image %>
      <label>Introduction</label>
      <%= f.text_area :introduction %>
      <%= f.submit 'Update User' %>
      <% end %>
      
    </div>
  </div>
</div>