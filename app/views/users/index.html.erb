<div class="container">
  <div class="row">

    <!--部分テンプレートの呼び出し-->
    <%= render 'books/side' %>

    <!--右側usersここから-->
    <div class="col-lg-8 bg-info">
      <h3>Users</h3>
      <table>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user.profile_image, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>