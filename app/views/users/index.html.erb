<div class="container">
  <div class="row">

    <div class="col-md-3">
    <!--部分テンプレートの呼び出し-->
    <%= render 'books/side', user: @user, book: @book %>
    </div>

    <!--右側usersここから-->
    <div class="col-md-8 offset-md-1">
      <h3>Users</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>